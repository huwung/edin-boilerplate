	margin-bottom: 1.33em;
	margin-left: 0;
	margin-right: 0;
	font-weight: bold;
}

h5 {
	display: block;
	font-size: .83em;
	margin-top: 1.67rem;
	margin-bottom: 1.67em;
	margin-left: 0;
	margin-right: 0;
